extend ../layout/common.pug
block content
    h1 User
    a(href="/users/create") Add Users
    span &nbsp;
    a(href="/users/remove") Remove Users
    form(action="/users/search", method="get", class="d-flex")
        input(name="q" ,type="text", class="form-control")
        button(class="btn btn-primary ml-2") Search
    ul
        each user in db.get('users').value()
            li
                span= user.name
                span &nbsp;
                a(href="/users/"+ user.id) View
        