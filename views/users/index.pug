extend ../layout/common.pug
block content
    h1 User
    a.btn.btn-primary(href="/users/create", role="button") Add users
    span &nbsp;
    a.btn.btn-primary(href="/users/remove", role="button") Remove Users
    form.form-inline(action="/users/search", method="get")
        .form-group.mt-3
            input.form-control(name="q" ,type="text")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr
            th Avatar 
            th Name
            th Phone Number
            th View
        each user in db.get('users').value()
            tr
                td 
                    img(src=user.avatar, style='width: 50px;')
                td= user.name
                td= user.phone
                td
                    a.btn.btn-primary(href="/users/"+ user.id) View
        