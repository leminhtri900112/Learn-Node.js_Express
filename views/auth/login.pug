extend ../layout/common.pug
block content
    h1 Sign in
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="post")
        
        .form-group
            label(for='exampleInputEmail') Email
            input#exampleInputEmail.form-control(name="email", type='text', placeholder='Input Email', value= value ? value.email : "")
        .form-group
            label(for='exampleInputPassword') Password
            input#exampleInputPassword.form-control(name="password", type='password', placeholder='Input Password', value= value ? value.password : "")
        button.btn.btn-primary Login